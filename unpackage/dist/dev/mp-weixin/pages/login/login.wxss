@font-color:#333;
@desc-color:#999,
@background-color:#3474FF,
@background-color-active:#0052FF;
.logo{
	width: 70%;
	display: block;
	margin-left: auto;
	margin-right: auto;
	margin-top: 30%;
}
.logo-title{
	font-size:48rpx;
	font-weight:bold;
	font-align:center;
	margin-top:8%;
	color:@font-color;
}
.logo-subtitle{
	font-size:34rpx;
	font-weight:bold;
	font-align:center;
	margin-top:20rpx;
	color:@font-color;
}
.login-btn{
	width: 60%;
	position: absolute;
	bottom: 20%;
	left: 20%;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	background-color: @background-color;
	color: #FFF;
}
.login-btn:active{
	background-color: @background-color-active;
}
.register-container{
	position: absolute;
	bottom: 50rpx;
	width: 100%;
	text-align: center;
	color: @font-color;
.register{
		color:@background-color;
}
}

